                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/notes"
                    android:layout_below="@+id/txtLabelAddNotes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </RelativeLayout>
        </FrameLayout>
